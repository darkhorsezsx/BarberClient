<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <com.cengalabs.flatui.views.FlatTextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="您的号码"
        android:textSize="25sp"
        android:id="@+id/tv_phone"
        android:layout_marginTop="108dp"
        flatui:theme="@array/sea"
        android:layout_marginLeft="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <com.cengalabs.flatui.views.FlatEditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint=""
        flatui:fieldStyle="box"
        android:id="@+id/et_login_phone"
        flatui:theme="@array/sea"
        android:textSize = "30sp"
        android:layout_below="@+id/tv_phone"
        android:layout_alignLeft="@+id/tv_phone"
        android:layout_alignStart="@+id/tv_phone" />
    <com.cengalabs.flatui.views.FlatTextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="您的密码"
        android:textSize="25sp"
        android:id="@+id/tv_passward"
        flatui:theme="@array/sea"
        android:layout_below="@+id/et_login_phone"
        android:layout_alignLeft="@+id/et_login_phone"
        android:layout_alignStart="@+id/et_login_phone"
        android:layout_marginTop="22dp" />
    <com.cengalabs.flatui.views.FlatEditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint=""
        flatui:fieldStyle="box"
        android:id="@+id/et_login_passward"
        flatui:theme="@array/sea"
        android:textSize = "30sp"
        android:layout_below="@+id/tv_passward"
        android:layout_alignLeft="@+id/tv_phone"
        android:layout_alignStart="@+id/tv_phone" />
    <com.cengalabs.flatui.views.FlatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_login"
        android:text="登录"
        flatui:textAppearance="dark"
        flatui:blockButtonEffectHeight="3dp"
        flatui:theme="@array/orange"
        android:layout_marginTop="68dp"
        android:layout_below="@+id/et_login_passward"
        android:layout_alignRight="@+id/tv_passward"
        android:layout_alignEnd="@+id/tv_passward" />
    <com.cengalabs.flatui.views.FlatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_register"
        android:text="注册"
        flatui:textAppearance="dark"
        flatui:blockButtonEffectHeight="3dp"
        flatui:theme="@array/orange"
        android:layout_alignTop="@+id/btn_login"
        android:layout_alignRight="@+id/et_login_passward"
        android:layout_alignEnd="@+id/et_login_passward"
        android:layout_marginRight="61dp" />

</RelativeLayout>