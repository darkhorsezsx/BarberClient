<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >
    <com.cengalabs.flatui.views.FlatEditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="您所在的理发店"
        flatui:fieldStyle="box"
        android:id="@+id/et_barbershop"
        flatui:theme="@array/sea"
        android:layout_marginTop="65dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <com.cengalabs.flatui.views.FlatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_shopinfo_next"
        android:text="完成"
        flatui:textAppearance="dark"
        flatui:blockButtonEffectHeight="3dp"
        flatui:theme="@array/orange"
        android:layout_alignTop="@+id/et_barbershop"
        android:layout_toRightOf="@+id/et_barbershop"
        android:layout_toEndOf="@+id/et_barbershop"
        android:layout_marginLeft = "10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/et_barbershop" />

    <it.gmariotti.cardslib.library.view.CardListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/history_list"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/et_barbershop"
        card:list_card_layout_resourceID="@layout/list_card_thumbnail_layout"
        />

</RelativeLayout>