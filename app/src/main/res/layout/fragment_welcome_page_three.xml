<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.cuthead.app.WelcomePagerOne"
                android:background="#F26D26"


                >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/male_layout"
        android:layout_marginTop="144dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/phone">

         <com.cuthead.controller.CircularImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/user_icon"
            android:id="@+id/male_icon"
            android:layout_marginBottom="8dp"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/female_layout"
        android:layout_marginRight="46dp"
        android:layout_alignTop="@+id/male_layout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

    <com.cuthead.controller.CircularImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/user_icon"
        android:layout_marginBottom="8dp"
        android:id="@+id/female_icon"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_gravity="center"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择"
        android:id="@+id/phone"
        android:layout_above="@+id/female_layout"
        android:layout_centerHorizontal="true"
        android:textSize="22sp"
        android:textColor="#ffffff"
        android:layout_marginBottom="37dp"/>


</RelativeLayout>
