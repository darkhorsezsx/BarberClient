<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity">


    <com.cengalabs.flatui.views.FlatEditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="姓名"
        flatui:fieldStyle="box"
        android:id="@+id/et_user_name_submit"
        flatui:theme="@array/sea"
        android:layout_below="@+id/et_user_phone_submit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        />
    <Spinner
        android:layout_marginLeft="10dp"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/spiner"
        android:layout_alignBottom="@+id/et_user_name_submit"
        android:layout_toRightOf="@+id/btn_basicinfo_next"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/et_user_name_submit"
        >
    </Spinner>

    <com.cengalabs.flatui.views.FlatEditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:hint="手机号码"
        flatui:fieldStyle="box"
        android:ems="10"
        android:id="@+id/et_user_phone_submit"
        flatui:theme="@array/sea"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/tv2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />
    <com.cengalabs.flatui.views.FlatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_basicinfo_next"
        android:text="下一步"
        flatui:textAppearance="dark"
        flatui:blockButtonEffectHeight="3dp"
        flatui:theme="@array/orange"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp" />

    <com.cengalabs.flatui.views.FlatTextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="请完善您的信息"
        android:textSize="25sp"
        android:id="@+id/tv2"
        android:layout_marginTop="53dp"
        flatui:theme="@array/sea"
        android:enabled="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <com.cengalabs.flatui.views.FlatEditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:hint="请输入密码"
        flatui:fieldStyle="box"
        android:ems="10"
        android:id="@+id/et_password_submit"
        flatui:theme="@array/sea"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/et_user_name_submit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />
    <com.cengalabs.flatui.views.FlatEditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:hint="请确认密码"
        flatui:fieldStyle="box"
        android:ems="10"
        android:id="@+id/et_password_confirm"
        flatui:theme="@array/sea"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/et_password_submit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

</RelativeLayout>
